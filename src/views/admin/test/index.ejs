<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Room</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        .chat-container {
            background-color: #34495e;
            border-radius: 10px;
            padding: 20px;
            width: 400px;
            max-height: 500px;
            display: flex;
            flex-direction: column;
        }
        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            margin-bottom: 10px;
        }
        .message {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .message .username {
            font-weight: bold;
            margin-right: 5px;
        }
        .message .text {
            word-wrap: break-word;
        }
        .chat-input {
            display: flex;
        }
        .chat-input input {
            flex-grow: 1;
            padding: 10px;
            border-radius: 20px;
            border: none;
            margin-right: 10px;
            background-color: #ecf0f1;
            color: black;
            font-size: 14px;
        }
        .chat-input button {
            padding: 10px;
            border-radius: 50%;
            background-color: #2980b9;
            border: none;
            cursor: pointer;
            color: white;
        }
    </style>
</head>
<body>

    <div class="chat-container">
        <div class="chat-messages" id="chat-messages">
            <!-- Messages will appear here -->
        </div>
        <div class="chat-input">
            <input type="text" id="message-input" placeholder="Say something...">
            <button id="send-button">&#9658;</button>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io("http://localhost:3006"); // Replace with your server URL

        // Default username and channelName
        const username = prompt("Enter your username:") || "Anonymous";
        const channelName = prompt("Enter channel name:") || "default_channel";

        // Join the chat room
        socket.emit("join room", channelName);

        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const chatMessages = document.getElementById('chat-messages');

        // Listen for chat messages from the server
        socket.on("chat message", (message, user) => {
            const messageElement = document.createElement('div');
            messageElement.classList.add('message');
            messageElement.innerHTML = `
                <div>
                    <span class="username">${user}:</span>
                    <span class="text">${message}</span>
                </div>
            `;
            chatMessages.appendChild(messageElement);
            chatMessages.scrollTop = chatMessages.scrollHeight; // Auto scroll to bottom
        });

        // Send message on button click
        sendButton.addEventListener('click', () => {
            const message = messageInput.value;
            if (message.trim() !== "") {
                socket.emit("chat message", { channelName, message, username });
                messageInput.value = ""; // Clear input
            }
        });

        // Send message on Enter key press
        messageInput.addEventListener('keypress', (event) => {
            if (event.key === 'Enter') {
                sendButton.click();
            }
        });
    </script>

</body>
</html>

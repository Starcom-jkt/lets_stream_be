<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Room with Gift System</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }
      .chat-container {
        background-color: #34495e;
        border-radius: 10px;
        padding: 20px;
        width: 400px;
        max-height: 600px;
        display: flex;
        flex-direction: column;
      }
      .chat-messages {
        flex-grow: 1;
        overflow-y: auto;
        margin-bottom: 10px;
      }
      .message {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
      }
      .message .username {
        font-weight: bold;
        margin-right: 5px;
      }
      .message .text {
        word-wrap: break-word;
      }
      .chat-input {
        display: flex;
        margin-bottom: 10px;
      }
      .chat-input input {
        flex-grow: 1;
        padding: 10px;
        border-radius: 20px;
        border: none;
        margin-right: 10px;
        background-color: #ecf0f1;
        color: black;
        font-size: 14px;
      }
      .chat-input button {
        padding: 10px;
        border-radius: 50%;
        background-color: #2980b9;
        border: none;
        cursor: pointer;
        color: white;
      }
      .gift-container {
        margin-top: 10px;
        display: none;
        flex-direction: column;
        align-items: center;
        background-color: #e74c3c;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
      }
      .gift-container img {
        width: 50px;
        height: 50px;
        margin-bottom: 10px;
      }
      .gift-details {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .gift-details span {
        margin-bottom: 5px;
      }
      .send-container,
      .receive-container {
        margin-bottom: 20px;
        padding: 15px;
        border-radius: 8px;
        background-color: #444;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
      }
      #errorMessage {
        color: red;
        font-weight: bold;
        margin-top: 20px;
      }
      .input-group {
        margin-bottom: 10px;
      }
      .input-group label {
        display: block;
        margin-bottom: 5px;
      }
      .input-group input {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: none;
        background-color: #ecf0f1;
        color: black;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <div class="chat-container">
      <!-- User Input Section -->
      <div class="input-group">
        <label for="username">Username:</label>
        <input type="text" id="username" placeholder="Enter your username" />
      </div>
      <div class="input-group">
        <label for="userId">User ID:</label>
        <input type="text" id="userId" placeholder="Enter your User ID" />
      </div>
      <div class="input-group">
        <label for="channelName">Channel Name:</label>
        <input type="text" id="channelName" placeholder="Enter channel name" />
      </div>
      <button id="joinButton">Join Chat</button>

      <!-- Chat and Send Gift Section -->
      <div id="chatSection" style="display: none">
        <div class="chat-messages" id="chat-messages">
          <!-- Messages will appear here -->
        </div>
        <div class="chat-input">
          <input
            type="text"
            id="message-input"
            placeholder="Say something..."
          />
          <button id="send-button">&#9658;</button>
        </div>
        <div class="send-container">
          <label for="gift-select">Send a Gift:</label>
          <select id="gift-select">
            <option value="5">chicken - 100</option>
            <option value="6">hamster - 200</option>
          </select>
          <button id="send-gift-button">Send Gift</button>
        </div>
        <div class="receive-container">
          <div id="giftContainer" class="gift-container">
            <img id="giftImg" src="" alt="Gift" />
            <div class="gift-details">
              <span id="giftName"><strong>Gift Name</strong></span>
              <span id="giftPrice">Price: $0</span>
              <span id="senderId">Sent by User ID: 0</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Error Message -->
      <div id="errorMessage" style="display: none">
        <p>Insufficient balance!</p>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      // const socket = io("https://2shop.codes"); // Replace with your server URL
      const socket = io("http://localhost:3006"); // Replace with your server URL

      const joinButton = document.getElementById("joinButton");
      const usernameInput = document.getElementById("username");
      const userIdInput = document.getElementById("userId");
      const channelNameInput = document.getElementById("channelName");
      const chatSection = document.getElementById("chatSection");

      joinButton.addEventListener("click", () => {
        const username = usernameInput.value || "Anonymous";
        const userId = userIdInput.value;
        const channelName = channelNameInput.value || "default_channel";

        if (!userId) {
          alert("Please enter your User ID");
          return;
        }

        // Join the chat room
        socket.emit("join room", { channelName, username });

        // Show the chat section
        chatSection.style.display = "block";
      });

      const messageInput = document.getElementById("message-input");
      const sendButton = document.getElementById("send-button");
      const chatMessages = document.getElementById("chat-messages");
      const giftSelect = document.getElementById("gift-select");
      const sendGiftButton = document.getElementById("send-gift-button");

      // Listen for chat messages from the server
      socket.on("chat message", (message, user) => {
        const messageElement = document.createElement("div");
        messageElement.classList.add("message");
        messageElement.innerHTML = `
      <div>
        <span class="username">${user}:</span>
        <span class="text">${message}</span>
      </div>
    `;
        chatMessages.appendChild(messageElement);
        chatMessages.scrollTop = chatMessages.scrollHeight; // Auto scroll to bottom
      });

      // Send message on button click
      sendButton.addEventListener("click", () => {
        const message = messageInput.value;
        const username = usernameInput.value || "Anonymous";
        const channelName = channelNameInput.value || "default_channel";

        if (message.trim() !== "") {
          socket.emit("chat message", { channelName, message, username });
          messageInput.value = ""; // Clear input
        }
      });

      // Send message on Enter key press
      messageInput.addEventListener("keypress", (event) => {
        if (event.key === "Enter") {
          sendButton.click();
        }
      });

      // Send gift on button click
      sendGiftButton.addEventListener("click", () => {
        const giftId = giftSelect.value;
        const userId = userIdInput.value;
        const channelName = channelNameInput.value || "default_channel";

        if (!userId) {
          alert("Please enter your User ID");
          return;
        }

        socket.emit("send gift", { channelName, userId, giftId });
      });

      // Listen for received gifts from the server
      socket.on("gift received", (gift) => {
        console.log("Gift received:", gift);
        displayGift(gift);
      });

      // Listen for error messages
      socket.on("error", (error) => {
        showError(error.message);
      });

      function displayGift(gift) {
        console.log("Displaying gift:", gift);

        const giftContainer = document.getElementById("giftContainer");
        const giftImg = document.getElementById("giftImg");
        const giftName = document.getElementById("giftName");
        const giftPrice = document.getElementById("giftPrice");
        const senderId = document.getElementById("senderId");

        giftImg.src = gift.img;
        giftName.innerText = gift.giftName;
        giftPrice.innerText = `Price: ${gift.price}`;
        senderId.innerText = `Sent by User ID: ${gift.senderId}`;

        // Show the gift container
        giftContainer.style.display = "flex";

        console.log("Gift container should now be visible");

        // Hide the gift after 2 seconds
        setTimeout(() => {
          giftContainer.style.display = "none";
          console.log("Gift container hidden");
        }, 2000);
      }

      function showError(message) {
        const errorMessage = document.getElementById("errorMessage");
        errorMessage.innerText = message;
        errorMessage.style.display = "block";

        // Hide the error message after 2 seconds
        setTimeout(() => {
          errorMessage.style.display = "none";
        }, 2000);
      }
    </script>
  </body>
</html>

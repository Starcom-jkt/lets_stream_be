<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Socket.IO Test</title>
  <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"></script>
</head>
<body>
  <h1>Real-Time Balance Updates</h1>
  <div>
    <p>Balance: <span id="balance">Fetching...</span></p>
  </div>

  <script>
    // Menghubungkan ke server Socket.IO
    const socket = io("http://localhost:3006");

    // Meminta pembaruan saldo untuk qwerty
    socket.emit("startBalanceUpdates", "qwerty");

    // Mendengarkan pembaruan saldo dari server
    socket.on("balanceUpdate", (data) => {
      document.getElementById("balance").textContent = data.balance.toFixed(2);
      console.log("Balance updated:", data.balance);
    });

    // Mendengarkan error dari server
    socket.on("error", (error) => {
      console.error("Error occurred:", error.message);
    });
  </script>
</body>
</html>

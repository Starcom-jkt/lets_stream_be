<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Currency</th>
      <th>Code Iso</th>
      <th>Symbol</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < currency.length; i++){ %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= currency[i].currency %></td>
        <td><%= currency[i].codeIso %></td>
        <td><%= currency[i].symbol %></td>
        <td>
          <form action="/admin/currency/delete/<%= currency[i].id %>?_method=DELETE" method="POST">
            <a href="/admin/currency/edit/<%= currency[i].id %>" class="btn btn-warning">
              <i class="fas fa-pencil-alt"></i> Edit
            </a>
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> Delete
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
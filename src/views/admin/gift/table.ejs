<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
    <thead>
      <tr>
        <th style="width: 7%">No</th>
        <th>Image</th>
        <th>Gift Name</th>
        <th>Price</th>
        <th style="width: 20%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < gift.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= gift[i].img %></td>
          <td><%= gift[i].giftName %></td>
          <td><%= gift[i].price %></td>
          <td>
            <form action="/admin/gift/delete/<%= gift[i].id %>?_method=DELETE" method="POST">
              <a href="/admin/gift/edit/<%= gift[i].id %>" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i> Edit
              </a>
              <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  
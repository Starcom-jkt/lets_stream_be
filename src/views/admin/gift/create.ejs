<%- include('../../components/header.ejs') %>
<body class="hold-transition sidebar-mini">
  <div class="wrapper">
<%- include('../../components/navbar.ejs') %>
   
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Gift</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/gift">Gift</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form tambah data Gift</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/gift/create" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="img">Image</label>
                      <input type="text" name="img" class="form-control" id="img" placeholder="image" required />
                    </div>

                    <div class="form-group">
                      <label for="giftName">Gift Name</label>
                      <input type="text" name="giftName" class="form-control" id="giftName" placeholder="giftName" required />
                    </div>

                    <div class="form-group">
                      <label for="giftLink">Gift Link</label>
                      <input type="text" name="giftLink" class="form-control" id="giftLink" placeholder="giftLink" required />
                    </div>

                    <div class="form-group">
                      <label for="price">Price</label>
                      <input type="text" name="price" class="form-control" id="price" placeholder="price" required />
                    </div>
                  </div>

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Simpan</button>
                    <button type="submit" class="btn btn-secondary">
                      <a href="/gift" style="color: white"><i class="fa fa-undo"></i>Cancel</a>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>


<%- include ('../../components/footer.ejs') %>
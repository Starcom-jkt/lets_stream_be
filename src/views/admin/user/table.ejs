<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
    <thead>
      <tr>
        <th style="width: 7%">No</th>
        <th>Player Id</th>
        <th>Username</th>
        <th>Nickname</th>
        <th>Balance</th>
        <th style="width: 20%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < user.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= user[i].playerId %></td>
          <td><%= user[i].username %></td>
          <td><%= user[i].nickname %></td>
          <td><%= user[i].balance %></td>
          <td>
            <form action="/user/delete/<%= user[i].id %>?_method=DELETE" method="POST">
              <a href="/user/edit/<%= user[i].id %>" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i> Edit
              </a>
              <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  
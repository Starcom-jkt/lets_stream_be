<%- include('../../components/header.ejs') %>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
  <%- include('../../components/navbar.ejs') %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Language</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/language">Language</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Form edit data language <%= language.languageName %></h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/language/edit/<%= language.id %>?_method=PUT" method="POST">
                      <div class="card-body">
    
                        <div class="form-group">
                          <label for="language">Language Name</label>
                          <input type="text" name="language" class="form-control" id="language" placeholder="language" required value="<%= language.languageName %>" oninput="capitalizeInput(event)"/>
                        </div>
    
                        <div class="form-group">
                          <label for="languageCode">Language Code</label>
                          <input type="text" name="languageCode" class="form-control" id="languageCode" placeholder="languageLink" required value="<%= language.languageCode %>" oninput="capitalizeInput(event)"/>
                        </div>
    
                      </div>

                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                        <button type="button" class="btn btn-secondary">
                          <a href="/language" style="color: white"><i class="fa fa-undo"></i> Cancel</a>
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
    <!-- /.content -->
</div>

  <%- include('../../components/footer.ejs') %>

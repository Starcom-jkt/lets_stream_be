<%- include('../../components/header.ejs') %>
<body class="hold-transition sidebar-mini">
  <div class="wrapper">
<%- include('../../components/navbar.ejs') %>
   
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Game</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/game">game</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form tambah data game</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/admin/game/create" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                    
                    <div class="form-group">
                      <label for="gameImg">Game Image</label>
                      <input type="file" name="gameImg" class="form-control" id="gameImg" accept="image/*" onchange="previewImage(event)" />
                    </div>
                    <div class="form-group">
                      <img id="gamePreviewImg" src="" alt="Profile Preview" style="display: none; max-width: 200px; max-height: 200px;" />
                    </div>

                    <div class="form-group">
                      <label for="gameCode">Game Code</label>
                      <input type="text" name="gameCode" class="form-control" id="gameCode" placeholder="Game Code" required />
                    </div>

                    <div class="form-group">
                      <label for="genre">Game Genre</label>
                      <select name="genre" class="form-control" id="genre" required>
                        <option value="" disabled selected>Select a genre</option>
                        <% genre.forEach(function(item) { %>
                          <option value="<%= item.id %>"><%= item.genreName %></option>
                        <% }); %>
                      </select>
                    </div>
                    


                    <div class="form-group">
                      <label for="gameName">Game Name</label>
                      <input type="text" name="gameName" class="form-control" id="gameName" placeholder="Game Name" required />
                    </div>

                    <div class="form-group">
                      <label for="gameLink">Game URL</label>
                      <input type="text" name="gameLink" class="form-control" id="gameLink" placeholder="Game URL" required />
                    </div>
                  </div>

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                    <button type="submit" class="btn btn-secondary">
                      <a href="/admin/game" style="color: white"><i class="fa fa-undo"></i> Cancel</a>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<script>
  function previewImage(event) {
    var input = event.target;
    var reader = new FileReader();

    reader.onload = function() {
      var dataURL = reader.result;
      var output = document.getElementById('gamePreviewImg');
      output.src = dataURL;
      output.style.display = 'block';
    };

    reader.readAsDataURL(input.files[0]);
  }
</script>



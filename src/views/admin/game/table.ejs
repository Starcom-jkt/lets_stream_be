<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
    <thead>
      <tr>
        <th style="width: 7%">No</th>
        <th>Game Name</th>
        <th>Game Img</th>
        <th>Game Genre</th>
        <th>Game URL</th>
        <th style="width: 20%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < game.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= game[i].gameName %></td>
          <td>

            <% if (game[i].gameImg && game[i].gameImg.startsWith('http')) { %>
              <!-- Menampilkan gambar dari URL HTTPS -->
              <img 
                src="<%= game[i].gameImg %>" 
                alt="game" 
                class="img-thumbnail" 
                style="width: 100px; height: 100px; border-radius: 100%;" 
              />
            <% } else if (game[i].gameImg) { %>
              <!-- Menampilkan gambar dari folder /uploads -->
              <img 
                src="/uploads/<%= game[i].gameImg %>" 
                alt="Profile Picture" 
                class="img-thumbnail" 
                style="width: 100px; height: 100px; border-radius: 100%;" 
              />
            <% } %>
          </td>
          <td><%= game[i].genre %></td>
          <td><%= game[i].gameLink %></td>
          <td>
            <form action="/admin/game/delete/<%= game[i].id %>?_method=DELETE" method="POST">
              <a href="/admin/game/edit/<%= game[i].id %>" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i> Edit
              </a>
              <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  